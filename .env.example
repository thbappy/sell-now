# SellNow Environment Configuration

# ============================================================
# Database Configuration
# ============================================================

# Database Driver: 'mysql' or 'sqlite'
# NOTE: Your system has MySQL driver enabled, so use 'mysql'
DB_DRIVER=mysql

# MySQL Configuration
DB_HOST=localhost
DB_NAME=sellnow
DB_USER=root
DB_PASSWORD=

# SQLite Configuration (if DB_DRIVER=sqlite)
# DB_PATH=/path/to/database.sqlite

# ============================================================
# Application Settings
# ============================================================

APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# ============================================================
# File Upload Settings
# ============================================================

MAX_IMAGE_SIZE=5242880      # 5MB
MAX_FILE_SIZE=52428800      # 50MB
UPLOAD_DIR=/public/uploads
